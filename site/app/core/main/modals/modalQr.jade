.modal-header
  button.close(type='button', ng-click='modalQrCode.close()')
    i.fa.fa-times
  h4.modal-title QR CODE
.modal-body
  .row
    .col-xs-4
      img.qr.image-responsive(ng-src='{{modalQrCode.qr}}')
    .col-xs-8
      h2.qrcode-title {{modalQrCode.user.firstname}} {{modalQrCode.user.lastname}}
      h3 {{modalQrCode.eventName}}
