.modal-header
  button.close(type='button', ng-click='modalQrCode.close()')
    i.fa.fa-times
  h4.modal-title QR CODE
.modal-body(print-section)
  .row
    .col-xs-4
      img.qr.image-responsive(ng-src='{{modalQrCode.qr}}')
    .col-xs-8
      h1.qrcode-subtitle {{modalQrCode.user.firstname}} {{modalQrCode.user.lastname}}
      h2.qrcode-title {{modalQrCode.user.cargo}}
.modal-footer
  .row.text-center
    button.btn.btn-success(print-btn)
      | Imprimir  
      i.fa.fa-print
